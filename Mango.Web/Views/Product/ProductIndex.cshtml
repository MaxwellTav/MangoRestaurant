@model IEnumerable<Mango.Web.Models.ProductDto>

<br /><br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary>Product List</h1>
        </div>

        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-info"><i class="fas fa-plus"></i> Create New Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("c")</td>
                    
                    <td>
                        <a asp-action="ProductDetails" class="btn btn-primary" asp-route-productId="@item.ProductId"><i class="fas fa-th-list"></i> Details </a>
                        <a asp-action="ProductEdit" class="btn btn-warning" asp-route-productId="@item.ProductId"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.ProductId"><i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>